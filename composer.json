{
    "name": "haydenk/web-hdfs-client",
    "description": "PHP client library for communicating with HDFS",
    "keywords": [
        "haydenk",
        "web-hdfs-client",
        "hdfs",
        "hadoop"
    ],
    "homepage": "https://github.com/haydenk/web-hdfs-client",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Hayden King",
            "email": "hayden.king@gmail.com"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^2.8"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "": "src/main/php"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": "src/test/php"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
         "sort-packages": true
    }
}
